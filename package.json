{
  "name": "doit",
  "version": "1.0.0",
  "description": "a buitiful, customizeable, cross platform destop todo widget",
  "main": "index.js",
  "author": "mitsuki",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "run:web": "yarn workspace @doit/solid_web",
    "run:electron": "yarn workspace @doit/electron_app",
    "run:shared": "yarn workspace @doit/shared",
